#include <iostream>
using namespace std;

string getLetterGrade(double);
double grade;
int main() {
    do {
        cout << "Enter the grade: ";
        cin >> grade;
        if (grade < 0 || grade > 100) {
            cout << "Invalid grade!" << endl;
        }
    }while (grade < 0 || grade > 100);
    cout << "The letter grade for " << grade << " is: " << getLetterGrade(grade) << endl;
    return 0;

}

string getLetterGrade(double grade) {
    if(grade >= 90) {
        return "A";
    }
    else if(grade < 90 &&  grade >= 80) {
        return "B";
    }
    else if(grade < 80 &&  grade >= 70) {
        return "C";
    }
    else if(grade < 70 &&  grade >= 60) {
        return "D";
    }
    else if(grade < 60) {
        return "F";
    }
}
